{
  "name": "heroku-cra-node",
  "version": "3.0.0",
  "description": "How to use create-react-app with a custom Node API on Heroku",
  "engines": {
    "node": ">= 22.16.0",
    "npm": ">= 10.9.2"
  },
  "scripts": {
    "start": "nodemon server/index.ts",
    "build": "cd client/ && npm i && npm run build",
